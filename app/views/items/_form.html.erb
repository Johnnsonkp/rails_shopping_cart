<section id="forms">
  <%= simple_form_for @item, html:{ multipart: true } do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <div class='title'>
        <%= f.input :title, required: true, input_html: { class: "input"}, wrapper: false, label_html: {class:"label"} %>
      </div>

      <div class='price'>
        <%= f.input :price, required: true, input_html: { class: "input", maxlength: 7 }, wrapper: false, label_html: { class:"label"}%>
      <div>

      <div class="field">
        <div class='description control'>
          <%= f.input :description, required: true, input_html: {class:"textarea"}, wrapper: false, label_html: {class:"label"}%>
        <div>
      </div>
    

      <div class='size'>
        <%= f.input :size, class:'size'%>
      <div>
      <div class='color'>
        <%= f.input :color, class:'color'%>
      <div>
      <div class='brand'>
        <%= f.input :brand, class:'brand'%>
      <div>
      <div class='condition'>
        <%= f.input :condition, class:'condition'%>
      <div>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

</section>


